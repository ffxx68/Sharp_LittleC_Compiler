; clear screen
LCD_PC1403LIB_CLS:

	; select mode
	LP 0x08   ; K   
	CPIM 0x01
	JRZP LCD_PC1403LIB_CLS_FILL
	CPIM 0x00
	JRZP LCD_PC1403LIB_CLS_CLEAR
	; mode not allowed
	RTN

LCD_PC1403LIB_CLS_FILL:
	LIA 0x7F
	JRP LCD_PC1403LIB_CLS_L0
LCD_PC1403LIB_CLS_CLEAR:
	LIA 0
LCD_PC1403LIB_CLS_L0:
	LIDP 12288 ; -> 12317
	LII 29
	FILD
	
	LIDP 12333 ; -> 12347
	LII 14
	FILD
	
	LIDP 12318 ; -> 12332
	LII 14
	FILD
	
	LIDP 12382 ; -> 12396
	LII 14
	FILD
	
	LIDP 12397; -> 12411 
	LII 14
	FILD
	
	LIDP 12352; -> 12381
	LII 29
	FILD
	
	RTN
